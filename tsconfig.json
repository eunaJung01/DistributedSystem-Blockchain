{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "paths": {
      "@core/*": [
        "/src/core/*"
      ],
      "@wallet/*": [
        "/wallet/*"
      ],
      "*": [
        "@types/*"
      ]
    }
  },
  "ts-node": {
    "esm": true,
    "files": true
  }
}
